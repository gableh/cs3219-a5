extends layout

block js
    script(src='javascripts/lib/d3/d3.js')
    script(src='javascripts/lib/d3/d3.layout.cloud.js')
    script(src='javascripts/d3.wordcloud.js')
    script(src='javascripts/wordcloud.js')

block content
    #graph.container
        .row
            .col-xs-11
                #chart-container

    #options.container
        .row
            .col-xs-11
                div.form-inline.query_type
                    div.form-group
                        label(for='query_type') Get
                        select#query_type.form-control
                            option(value="top")
                                | top
                            option(value="count")
                                | number of
                    div.form-group
                        input#limit.form-control(placeholder="100")
                    div.form-group
                        select#reference_type.form-control
                            option(value="authors")
                                | authors
                            option(value="papers")
                                | papers
                    div.form-group
                        label() by
                        select.form-control#sort
                            option(value="papers")
                                | papers
                            option(value="citations")
                                | citations
                    div.form-group
                        select.form-control#top
                            option(value="")
                                | .
                            option(value="venue")
                                | at venue
                            option(value="year")
                                | in year
                    div.form-group
                        input#top-input.form-control(placeholder="E.g 2014 or arxiv")

                    button.btn.btn-primary#submit() Query!
